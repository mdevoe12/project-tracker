

<div class="page-header container-fluid">
  <h1> <%= @project.name %> </h1>
</div>



<div class="col-xs-3">
  <h3>Notes / Tasks</h3>
    <% @project.notes.each do |note| %>
      <li class="list-group-item"><%= link_to note.title, user_project_note_path(current_user, @project, note) %></li>
    <% end %>
</div>


<div class="col-xs-3">
  <h3>Tags</h3>
    <% if @project.tag_list == "" %>
      <li class="list-group-item"><i><%= "No Tags" %></i></li>
    <% else %>
      <% @project.tags.each do |tag| %>
        <li class="list-group-item"><%= link_to tag.name, tag_path(tag) %></li>
      <% end %>
    <% end %>
</div>


<div class="col-xs-3">
  <h3><%= @completion%></h3>
  <%= pie_chart @chart %>
</div>


<div class="col-xs-3">
  <h3>Quick Links</h3>
    <li><%= link_to "New Note", new_user_project_note_path(current_user, @project) %></li>
    <li><%= link_to "Edit #{@project.name}", edit_user_project_path(current_user, @project) %></li>
    <li><%= link_to "Delete '#{@project.name}'", user_project_path(current_user, @project), method: :delete %></li>
    <li><%= link_to "Project List", user_projects_path(current_user) %></li>
</div>
